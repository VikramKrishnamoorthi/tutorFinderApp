<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/studentHomeRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#FFFFFF">

    <!-- Header with gradient -->
    <View
        android:id="@+id/headerView"
        android:layout_width="0dp"
        android:layout_height="160dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/header_gradient" />

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Welcome!"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/headerView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="36dp"
        android:gravity="center"/>

    <!-- My Tutors card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/myTutorsCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/headerView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/myTutorsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Tutors"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#3D348B"/>

            <TextView
                android:id="@+id/myTutorsSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View tutors you are already with"
                android:layout_marginTop="8dp"
                android:textColor="#666"/>

            <Button
                android:id="@+id/myTutorsButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Open"
                android:layout_marginTop="12dp"
                android:backgroundTint="#F7B801"
                android:textColor="#3D348B"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Find Tutors card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/findTutorsCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/myTutorsCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/findTutorsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Find Tutors"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#F35B04"/>

            <TextView
                android:id="@+id/findTutorsSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Browse and filter available tutors"
                android:layout_marginTop="8dp"
                android:textColor="#666"/>

            <Button
                android:id="@+id/findTutorsButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search"
                android:layout_marginTop="12dp"
                android:backgroundTint="#7678ED"
                android:textColor="#FFFFFF"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
