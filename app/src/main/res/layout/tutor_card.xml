<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    android:radius="14dp"
    android:elevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tutorName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tutor Name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#3D348B"/>

        <TextView
            android:id="@+id/tutorSubjects"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subjects: Math"
            android:layout_marginTop="6dp"/>

        <TextView
            android:id="@+id/tutorPayment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Payment: $25/hr"
            android:layout_marginTop="4dp"
            android:textColor="#F35B04"/>

        <TextView
            android:id="@+id/tutorAvailability"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Available: Mon/Wed"
            android:layout_marginTop="4dp"/>

        <Button
            android:id="@+id/requestTutorBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Request Tutor"
            android:layout_marginTop="8dp"
            android:backgroundTint="#F7B801"
            android:textColor="#3D348B"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
